{
  "name": "life-planning-simulation",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://ko-hioki.github.io/life-planning-simulation",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:ci": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:basic": "playwright test tests/basic.e2e.test.ts",
    "test:e2e:wizard": "playwright test tests/wizard.e2e.test.ts",
    "test:e2e:charts": "playwright test tests/charts.e2e.test.ts",
    "test:e2e:accessibility": "playwright test tests/accessibility.e2e.test.ts",
    "test:e2e:chromium": "playwright test --project chromium",
    "test:e2e:firefox": "playwright test --project firefox",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report",
    "type-check": "tsc --noEmit",
    "coverage": "vitest run --coverage",
    "deploy": "yarn build && gh-pages -d dist"
  },
  "dependencies": {
    "@types/html2canvas": "^0.5.35",
    "@types/jspdf": "^1.3.3",
    "@types/node": "^22.15.30",
    "@types/react-router-dom": "^5.3.3",
    "@types/recharts": "^2.0.1",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2",
    "recharts": "^2.15.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@playwright/test": "^1.52.0",
    "@tailwindcss/postcss": "^4.1.8",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "^3.2.2",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.25.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "gh-pages": "^6.3.0",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.4",
    "tailwindcss": "^4.1.8",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.2"
  }
}
